<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #f5f6fa;">
    <center>
        <HBox prefHeight="500" prefWidth="800">
            <VBox prefWidth="350" alignment="CENTER">
                <ImageView fx:id="imageLogo"

                           fitWidth="200" fitHeight="200"
                           preserveRatio="true"/>
            </VBox>
            <VBox prefWidth="450" spacing="15" alignment="CENTER">
                <Label text="Inicia sesion" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                <TextField
                        fx:id="txtUsername"
                        promptText="Usuario"
                        maxWidth="250"
                        style="-fx-background-color: white;
                                          -fx-border-color: #d1d5db;
                                          -fx-border-width: 1.5;
                                          -fx-border-radius: 8;
                                          -fx-background-radius: 8;
                                          -fx-padding: 10 15;
                                          -fx-font-size: 14px;
                                          -fx-text-fill: #111827;"/>
                <PasswordField
                        fx:id="txtPassword"
                        promptText="Contraseña"
                        maxWidth="250"
                        style="-fx-background-color: white;
                                          -fx-border-color: #d1d5db;
                                          -fx-border-width: 1.5;
                                          -fx-border-radius: 8;
                                          -fx-background-radius: 8;
                                          -fx-padding: 10 15;
                                          -fx-font-size: 14px;
                                          -fx-text-fill: #111827;"
                />


                <Button fx:id="btnLogin"
                        text="Ingresar"
                        style="-fx-background-color: #001f3f; -fx-padding: 10 15;  -fx-font-size: 12px; -fx-text-fill: white;"
                        maxWidth="250"/>

                <Button
                        fx:id="btnRegister"
                        text="¿No tienes una cuenta aún?"
                        style="
                            -fx-background-color: transparent;
                            -fx-text-fill: #2563eb;
                            -fx-underline: true;
                            -fx-cursor: hand;
                            -fx-font-size: 13px;
                            -fx-font-weight: bold;
                            -fx-padding: 4 0 4 0;
                        "

                />

            </VBox>
        </HBox>

    </center>
</BorderPane>
