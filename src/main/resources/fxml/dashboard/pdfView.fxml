<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DashboardControllerPdf"
            prefHeight="400.0" prefWidth="800.0">

    <center>
        <HBox spacing="20" alignment="CENTER" prefHeight="500" prefWidth="800">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <VBox spacing="15" alignment="TOP_LEFT" prefWidth="300">
                <Label text="Generar PDF"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-width:100%;" />

                <Label text="Ingrese Clave ID:" />
                <TextField fx:id="txtClaveId" promptText="Clave ID" />

                <Label text="Ingrese la contraseña del PDF:" />
                <TextField fx:id="txtContrasennadPdf" promptText="Contraseña del PDF" />

                <Button fx:id="btnGenerarPdf"
                        onAction="#handleClickGeneratePdf"
                        text="Generar PDF"
                        style="-fx-background-color: #0C1019; -fx-text-fill: white; -fx-padding: 12 24; -fx-width:100%;" />
            </VBox>

            <VBox
                    spacing="10"
                    alignment="TOP_CENTER"
                    prefWidth="500"
                  style="
                  -fx-border-color: #ccc;
                  -fx-border-width: 1;
                  -fx-background-color: #f9f9f9;">

                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>

                <Label text="Vista Previa del PDF"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />

                <Label
                        text="[PDF se mostrará aquí]"
                        fx:id="lblPreviewPlaceholder"
                        style="-fx-text-fill: #6b7280;"/>
                <ScrollPane fitToWidth="true" fitToHeight="true"
                            prefHeight="700" prefWidth="600"
                            pannable="true"  hbarPolicy="NEVER">
                    <ImageView fx:id="pdfPreviewImage" fitWidth="500" preserveRatio="true"/>
                </ScrollPane>
            </VBox>

        </HBox>
    </center>
</BorderPane>