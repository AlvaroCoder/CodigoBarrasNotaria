            <VBox prefWidth="450" spacing="15" alignment="CENTER">
                <Label text="Iniciar Sesion" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <TextField fx:id="txtUsername" promptText="Usuario" maxWidth="250"/>
                <PasswordField fx:id="txtPassword" promptText="ContraseÃ±a" maxWidth="250"/>

                <Button fx:id="btnLogin"
                        text="Ingresar"
                        style="-fx-background-color: #001f3f; -fx-text-fill: white;"
                        maxWidth="250"/>

            </VBox>
        </HBox>
    </center>
</BorderPane>
